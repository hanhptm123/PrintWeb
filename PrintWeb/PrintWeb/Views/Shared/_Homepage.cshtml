<html>
<head>
    <title>Website Printing of The SaiGon International University</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
   

    <style>
        body {
        margin: 0;
        font-family: Arial, sans-serif;
        }
        .header {
        background-color: #add8e6;
        padding: 10px;
        display: flex;
        align-items: center;
        }
        .header img {
        height: 80px;
        }
        .header h1 {
        margin: 0;
        font-size: 24px;
        font-weight: bold;
        flex-grow: 1;
        text-align: center;
        }
        .login-bar {
        background-color: #f1f1f1;
        padding: 10px;
        text-align: left;
        padding-left: 50px;
        }
        .login-bar .login {
        font-size: 16px;
        display: inline-flex;
        align-items: center;
        }
        .login-bar .login i {
        margin-right: 5px;
        }
        .container {
        display: flex;
        height: calc(100vh - 160px);
        }
        .sidebar {
        background-color: #1565c0;
        width: 200px;
        display: flex;
        flex-direction: column;
        }
        .btn {
        border: none;
        padding: 15px;
        font-size: 16px;
        cursor: pointer;
        text-align: left;
        width: 100%;
        color: white;
        }
        .btn-blue {
        background-color: #1565c0;
        }
        .btn-yellow {
        background-color: #ffd700;
        color: black;
        }
        .btn:hover {
        opacity: 0.8;
        }
        .content {
        flex-grow: 1;
        background-color: white;
        border: 1px solid #ccc;
        padding: 20px;
        margin: 10px;
        }
        .footer {
        background-color: #add8e6;
        text-align: center;
        padding: 10px;
        position: relative;
        bottom: 0;
        width: 100%;
        }
        .footer img {
        height: 50px;
        position:absolute;
        left:700px;
        }

        .btn-shadow {
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
        transition: transform 0.2s, box-shadow 0.2s;
        }

        .btn-shadow:hover {
        transform: scale(1.05);
        box-shadow: 0px 6px 8px rgba(0, 0, 0, 0.3);
        }

    </style>
</head>
<body>
    <div class="header">
        <img alt="University logo" src="https://www.adscientificindex.com/logos/7461.png" />
        <h1>Website Printing of The SaiGon International University</h1>
    </div>
    @if (!User.Identity.IsAuthenticated)
    {
        <div class="login-bar">
            <a href="/Accounts/Login" class="login">
                <i class="fas fa-sign-in-alt"></i>
                <span>Login</span>
            </a>
        </div>
    }
    @if (User.Identity.IsAuthenticated)
    {
        <div class="login-bar">
            <a href="/Accounts/Logout" class="login">
                <i class="fas fa-sign-in-alt"></i>
                <span>Logout</span>
            </a>
        </div>
    }

    <div class="container">
        <div class="sidebar">
            @if (User.Identity.IsAuthenticated)
            {
                <button type="button" class="btn btn-blue" onclick="window.location.href='@Url.Action("Index", "Profile")'">View Profile</button>
                <button class="btn btn-yellow" onclick="location.href='/PrintingLogs/Create'">Print Documents</button>
                <button class="btn btn-blue" onclick="location.href='/PrintingLogs/Index'">View Printing History</button>
                <button class="btn btn-yellow" onclick="location.href='/Documents/Create'">Upload Document</button>
                <button class="btn btn-blue" onclick="location.href='/Documents/Index'">Your Document</button>
                <button class="btn btn-yellow" onclick="location.href='/Paper/BuyPaper'">Buy Paper</button>
                <button class="btn btn-blue" onclick="location.href='/Paper/PaymentHistory'">View Buy Paper History</button>
            }
            <button class="btn btn-yellow btn-shadow" onclick="location.href='/Printers/Index'">View Printers</button>
       

            

        </div>
        <div class="content">
            @RenderBody()
        </div>
    </div>
    <div class="footer">
        <img alt="University logo" src="https://www.adscientificindex.com/logos/7461.png" />
        <p>Copyright © belongs to The Saigon International University (SIU)</p>
    </div>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>