@{
    ViewData["Title"] = "Payment Success";
}

<div style="display: flex; flex-direction: column; align-items: center; justify-content: flex-start; min-height: 100vh; background-color: #f9f9f9; padding: 30px 20px;">
    <div style="background: white; border-radius: 12px; padding: 30px; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); text-align: center; max-width: 500px; width: 100%; margin-top: 30px;">
        <i class="fas fa-check-circle" style="color: #28a745; font-size: 120px; margin-bottom: 20px;"></i>
        <h1 style="color: #28a745; font-size: 32px; font-weight: bold; margin-bottom: 10px;">Payment Successful!</h1>
        <p style="color: #6c757d; font-size: 18px; margin-bottom: 20px;">Your payment has been processed successfully. Thank you for your transaction!</p>
        <a href="/Home/Index" class="btn btn-success" style="padding: 10px 25px; font-size: 16px; color: #28a745; border-radius: 25px; margin-top: 20px;">Return to Home</a>
    </div>
</div>

