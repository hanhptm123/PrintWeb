@model PrintWeb.Data.Student

<div style="max-width: 600px; margin: 0 auto; padding: 20px; border: 1px solid #ddd; border-radius: 10px; background-color: #f9f9f9; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <h2 style="text-align: center; color: #0056b3; font-family: Arial, sans-serif;">Add Balance</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div style="color: red; text-align: center; margin-bottom: 10px; font-weight: bold;">
            @TempData["ErrorMessage"]
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div style="color: #0056b3; text-align: center; margin-bottom: 10px; font-weight: bold;">
            @TempData["SuccessMessage"]
        </div>
    }

    <div style="margin-bottom: 20px; font-family: Arial, sans-serif;">
        <p><strong>Student ID:</strong> @Model.StudentId</p>
        <p><strong>Student Name:</strong> @Model.StudentName</p>
        <p><strong>Current Balance:</strong> @Model.AccountBalance</p>
        <p><strong>Payment Method:</strong>@ViewBag.PaymentName</p>
    </div>


    <form method="post" action="@Url.Action("AddBalance", "Payment")" style="font-family: Arial, sans-serif;">
        <div style="margin-bottom: 15px;">
            <label for="amount" style="display: block; margin-bottom: 5px; font-weight: bold;">Enter Amount:</label>
            <input type="number" id="amount" name="amount" step="0.01" required
                   style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px; box-sizing: border-box;" />
        </div>
        <button type="submit"
                style="background-color: #0056b3; color: white; padding: 10px 20px; border: none; border-radius: 5px; font-size: 16px; cursor: pointer; width: 100%; text-align: center;">
            Add Balance
        </button>
    </form>

</div>
