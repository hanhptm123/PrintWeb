@model IEnumerable<PrintWeb.Data.PaymentRecord>

@{
    ViewData["Title"] = "Lịch sử thanh toán";
}

<h2 class="mb-4">Lịch sử thanh toán</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="card mb-4">
    <div class="card-body">
        <h4>Thông tin sinh viên</h4>
        <p><strong>Mã sinh viên:</strong> @ViewBag.Student.StudentId</p>
        <p><strong>Tên sinh viên:</strong> @ViewBag.Student.StudentName</p>
        <p><strong>Số dư tài khoản:</strong> @string.Format("{0:C}", ViewBag.Student.AccountBalance)</p>
    </div>
</div>

<h4>Danh sách thanh toán</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ngày thanh toán</th>
            <th>Số tiền</th>
            <th>Phương thức thanh toán</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var payment in Model)
        {
            <tr>
                <td>@payment.PaymentDate.ToString("dd/MM/yyyy HH:mm:ss")</td>
                <td>@string.Format("{0:C}", payment.Amount)</td>
                <td>
                    @if (payment.PaymentMethod == 1)
                    {
                        @:Trả qua tài khoản
                    }
                    else
                    {
                        @:Phương thức khác
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("BuyPaper", "Paper")" class="btn btn-secondary">Quay lại</a>