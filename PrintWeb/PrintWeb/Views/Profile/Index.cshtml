@model PrintWeb.Data.Student

<h2>Student Profile</h2>

<div class="student-info-container">
    <h3>Student Information</h3>
    <div class="student-details">
        <p><strong>Student ID:</strong> @Model.StudentId</p>
        <p><strong>Student Name:</strong> @Model.StudentName</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Account Balance:</strong> @Model.AccountBalance</p>
    </div>

    @if (Model.Account != null)
    {
        <div class="password-section">
            <p>
                <strong>Password:</strong>
                <span id="passwordDisplay">*************</span>
                <button type="button" id="viewPasswordBtn" onclick="togglePasswordView()">View</button>
            </p>
            <div class="btn-container">
                <a asp-action="EditPassword" class="btn btn-edit">Edit Password</a>
            </div>
        </div>
    }
</div>

<a href="@Url.Action("Logout", "Account")" class="btn btn-logout">Logout</a>

<script>
    function togglePasswordView() {
        const passwordDisplay = document.getElementById('passwordDisplay');
        const viewPasswordBtn = document.getElementById('viewPasswordBtn');
        if (passwordDisplay.textContent === '*************') {
            passwordDisplay.textContent = '@Model.Account.Password';
            viewPasswordBtn.textContent = 'Hide';
        } else {
            passwordDisplay.textContent = '*************';
            viewPasswordBtn.textContent = 'View';
        }
    }
</script>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
        margin: 20px;
    }

    h2 {
        text-align: center;
        color: #333;
        margin-bottom: 30px;
    }

    .student-info-container {
        background-color: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: 0 auto;
    }

    .student-details p {
        margin-bottom: 12px;
        font-size: 16px;
        color: #555;
    }

    .password-section {
        margin-top: 20px;
        font-size: 16px;
    }

    #viewPasswordBtn {
        margin-left: 10px;
        cursor: pointer;
        background-color: #007bff;
        color: white;
        border: none;
        padding: 6px 12px;
        font-size: 14px;
        border-radius: 5px;
    }

    #viewPasswordBtn:hover {
        background-color: #0056b3;
    }

    .btn-container {
        margin-top: 10px;
    }

    .btn-edit {
        background-color: #0056b3;
        color: white;
        border: 1px solid #0056b3;
        padding: 8px 15px;
        font-size: 16px;
        border-radius: 5px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        cursor: pointer;
        transition: background-color 0.3s, transform 0.2s;
    }

    .btn-edit:hover {
        background-color: #004085;
        transform: scale(1.05);
    }

    .btn-edit:focus {
        outline: none;
        box-shadow: 0 0 0 2px rgba(40, 167, 69, 0.5);
    }

    .btn-logout {
        display: inline-block;
        background-color: #d9534f;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        font-size: 16px;
        margin-top: 20px;
        transition: background-color 0.3s;
    }

    .btn-logout:hover {
        background-color: #c9302c;
    }

    .btn-logout:focus {
        outline: none;
        box-shadow: 0 0 0 2px rgba(217, 83, 79, 0.5);
    }
</style>
